{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'candidacy.step3.html_title'|trans }}{% endblock %}

{% form_theme form 'MunicipalesBundle:theme:forms.html.twig' %}
{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_widget %}

{% block content %}
<section class="section-2">
	<div class="container marketing">

        <div class="headline">
          <h2>{{ 'home.step_h2'|trans }} 3</h2>
        </div>
        
        <h3 class="featurette-headin"> <i>{{ 'candidacy.step3.h1_title'|trans }}</i></h3>
        
        <!-- START THE FEATURETTES -->

        <!--    division -->
        
        {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}
        
        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
              	
              	
                <div id="fuelux-wizard-container">
                  	{{ steps_widget(3) }}
                  
				  	<hr>

                	<div class="step-content pos-rel container-fluid">
                  
	                  <div class="row">
				        	<h2 class="col-md-8 col-sm-offset-2 text-center">{{ 'candidacy.step3.h1_title'|trans }}</h2>
				      </div>
			          
			          <hr class="featurette-divider2">
			            
					  {% if not form.vars.valid %}
	                  <div class="alert alert-danger">
	                          <button data-dismiss="alert" class="close" type="button">
	                            <i class="mine-icon fa fa-times"></i>
	                          </button>
	                          {{ form_errors(form) }}
	                  </div>
	                  {% endif %}

			           <div data-step="1" class="step-pane active col-xs-12">
			
			              <div class="col-md-offset-2 col-md-9 form-horizont">
				                <div class="widget-box2">
				
				                  <div class="widget-body">
				                    <div class="widget-main">

    {{ form_start(form, { 'attr': {'class': 'form_settings'}}) }}

     	{% if not form.vars.valid %}
		<div class="alert alert-danger">
			  <button data-dismiss="alert" class="close" type="button">
				<i class="mine-icon fa fa-times"></i>
			  </button>
			  {{ form_errors(form) }}
		</div>
	{% endif %}
	
	<div class="row">
		<p class="important">
			{{ 'candidacy.step3.explanation_date'|trans }}:
		</p>
	</div>
	
			
			<div class="row">
				<label>{{ form_label(form.from, 'candidacy.step3.from_label'|trans) }}</label>
				
				<div class="form-group{% if form.from.vars.errors|length > 0 %} has-error{% endif %}">
								<div class="col-xs-12 col-sm-12">
		                          <div class="input-daterange input-group">
		                          	
		                          	{{ form_widget(form.from, { 'label': 'candidacy.step3.from_label'|trans|raw, 'label_attr' : { 'class' : 'input-sm form-control'}} ) }}
	
		                            {% if form.from.vars.errors|length > 0 %}<div class="help-block col-xs-12 col-sm-reset inline">{{ form_errors(form.from) }}</div>{% endif %}
		                        </div>
		    		 </div>
	    		 </div>
    		 </div>
    		 
    		 <div class="row">
    		 <br />
				<label>{{ form_label(form.to, 'candidacy.step3.to_label'|trans) }}</label>
				
				<div class="form-group{% if form.to.vars.errors|length > 0 %} has-error{% endif %}">
					<div class="col-xs-12 col-sm-12">
	                          <div class="input-daterange input-group">
	                          	
	                          	{{ form_widget(form.to, { 'label': 'candidacy.step3.to_label'|trans|raw, 'label_attr' : { 'class' : 'input-sm form-control'}} ) }}

	                            {% if form.to.vars.errors|length > 0 %}<div class="help-block col-xs-12 col-sm-reset inline">{{ form_errors(form.to) }}</div>{% endif %}
	                        </div>
	    		 	</div>
    			 </div>
    		 </div>
		</div>
			                  </div>
			                </div>
			              </div>
			            </div>
                      
                    </div>
                    
                    
                    
                  </div>
                  
                  <hr>
	                <div class="wizard-actions">
	
					  <button class="btn btn-prev" onclick="parent.location='{{ path('municipales_candidacy_step2') }}'">
	                    <i class="mine-icon fa fa-arrow-left"></i>
	                    {{ 'candidacy.step3.previous'|trans }}
	                  </button>
	                  
	                  {{ form_widget(form.continue, { 'label': 'candidacy.step3.continue'|trans|raw, 'attr' : { 'class' : 'submit btn btn-success btn-next'} }) }}
	
	                </div>
                
                </div>

                
              </div>
              
              
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        {{ form_rest(form) }}
			
		{{ form_end(form) }}
			  
        <!--    division -->

        <!-- /END THE FEATURETTES --> 
        </div>
</section>
{% endblock %}	