{% extends 'MunicipalesBundle:theme:layout.html.twig' %}

{% block title %}{{ 'town.step9.html_title'|trans }}{% endblock %}

{% from 'MunicipalesBundle:macros:steps.html.twig' import steps_town_widget %}

{% block content %}
<section class="section-2">
      <div class="container marketing">

        <div class="headline">
          <h2>{{ 'town.step9.headline'|trans }}</h2>
        </div>
        
        <h3 class="featurette-headin"> <i>{{ 'town.step9.headin1'|trans }} {{ town|capitalize }} {{ 'town.step9.headin2'|trans }} listAbierta.org</i></h3>
        
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider2">
        <!--    division -->

        <div class="row featurette2">
          <div class="widget-box">
            

            <div class="widget-body">
              <div class="widget-main">
              
              	
              	
                <div id="fuelux-wizard-container">

                  <div class="step-content pos-rel">
  
                    <div data-step="1" class="step-pane active row">
                      <h2 class="lighter block greenl col-xs-10 col-sm-offset-1">{{ 'town.step9.candidates_voted'|trans }}</h2>
                      
                      <div class="col-sm-offset-1 col-md-10 well">

						<p class="lead2">

							<div class="col-sm-offset-0 col-md-12">
		                      	{{ 'town.step9.candidates_voted_explanation'|trans }}
		                    </div>
		                    
						    <div class="col-sm-offset-0 col-md-12">
		                      	{{ 'town.step9.total_voters'|trans }}: {{ total_voters }}
		                    </div>
                      
							<br /><br />
							
							<div class="col-sm-offset-0 col-md-12">
								{# @todo #}
								<a href="/download-tractis-csv/1">{{ 'town.step9.donwload_csv'|trans }}</a>
							</div>
                      
							<br /><br />
							
							<table class="table" style="font-size: 18px">
							
								<thead>
									<tr>
										<td></td>
										<td></td>
										<td class="center">{{ 'town.step9.total_points'|trans }}</td>
										<td class="center">{{ 'town.step9.position'|trans }}</td>
									</tr>
								</thead>
								
								<tbody>
									{% if candidates|length > 0 %}
									
										{% for candidate in candidates %}
										<tr>
											<td><img style="width:45px;height:45px" src="{{ app.request.server.get('HTTP_ORIGIN') }}/{{ documents_path }}{{ candidate.id }}/photo/photo.jpg" /></td>
											<td>{{ candidate.name }} {{ candidate.lastname }}</td>
											<td class="center">{{ candidate.points }}</td>
											<td class="center">{{ loop.index }}</td>
										</tr>
										{% endfor %}
									{% endif %}
								</tbody>
							
							</table>
						
						</p>
			          
			        </div>

                      
                    </div>
                  </div>
                </div>

                <hr>
                <div class="wizard-actions">

				  <button class="btn btn-prev" onclick="parent.location='{{ path('town_candidacy_vote_step8', {'address' : address }) }}'">
                    <i class="mine-icon fa fa-arrow-left"></i>
                    {{ 'town.step9.previous'|trans }}
                  </button>

                </div>
              </div>
              
              
              <!-- /.widget-main --> </div>
            <!-- /.widget-body --> </div>
        </div>

        <!--    division -->

        <!-- /END THE FEATURETTES --> </div>
        
</section>
{% endblock %}