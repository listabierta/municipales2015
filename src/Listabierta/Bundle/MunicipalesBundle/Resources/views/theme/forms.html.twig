{% block form_row %}
{% spaceless %}
    <div class="form_row">
        A{{ form_label(form) }}
        B{{ form_errors(form) }}
        C{{ form_widget(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}


{% block form_widget_simple %}
    {% set type = type|default('text') %}

    <div class="col-xs-12 col-sm-5">
    	<span class="block input-icon input-icon-right">
        	<input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}> 
        </span>
    </div>               
{% endblock form_widget_simple %}            
                          
{% block form_label %}
	   {% if label is not sameas(false) %}
	        {% if not compound %}
	            {% set label_attr = label_attr|merge({'for': id}) %}
	        {% endif %}
	        {% if required -%}
	            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
	        {% endif %}
	        {% if label is empty %}
	            {% if label_format is not empty %}
	                {% set label = label_format|replace({
	                    '%name%': name,
	                    '%id%': id,
	                }) %}
	            {% else %}
	                {% set label = name|humanize %}
	            {% endif %}
	        {% endif %}
	        
	        <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}{% if required %}
	        <span class="required" title="This field is required"> *</span>
	   {% endif %}</label>
	    {% endif %}
	    

{% endblock %}

{%- block submit_widget -%}
    {%- set type = type|default('submit') -%}
    {{ block('button_widget') }}
{%- endblock submit_widget -%}

{%- block button_widget -%}
    {%- if label is empty -%}
        {%- if label_format is not empty -%}
            {% set label = label_format|replace({
                '%name%': name,
                '%id%': id,
            }) %}
        {%- else -%}
            {% set label = name|humanize %}
        {%- endif -%}
    {%- endif -%}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{{ label|trans({}, translation_domain)|raw }}</button>
{%- endblock button_widget -%}

{%- block button_attributes -%}
    id="{{ id }}" name="{{ full_name }}"{% if disabled %} disabled="disabled"{% endif -%}
    {%- for attrname, attrvalue in attr -%}
        {{- " " -}}
        {%- if attrname in ['placeholder', 'title', 'class'] -%}
            {{- attrname }}="{{ attrvalue|trans({}, translation_domain) }}"
        {%- elseif attrvalue is sameas(true) -%}
            {{- attrname }}="{{ attrname }}"
        {%- elseif attrvalue is not sameas(false) -%}
            {{- attrname }}="{{ attrvalue }}"
        {%- endif -%}
    {%- endfor -%}
{%- endblock button_attributes -%}